div.mt-10
  if properties.length > 0
    h2(style="font-weight: bold; padding: 1rem 0;")= `${properties[0].categoryId === 1 ? 'Houses' : properties[0].categoryId === 6 ? 'Apartments' : 'Properties'} in sell`

    div(class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4")
      each property in properties
        div(class="bg-gray-100 h-250 p-4 m-4 text-center rounded-lg")
          p(class="text-xl font-semibold my-2")= `${property.title}`
          div(style="height: 150px; overflow: hidden;")
            img(src=`/uploads/${property.image}`, class="mx-auto my-5 object-cover w-full h-48 rounded-md")
          p(class="text-gray-700 mb-5")= `${property.description}`
          a(
            style="color: #ffffff; transition: color 0.3s ease-in-out;"
            class="text-lg font-semibold transition duration-300 ease-in-out transform hover:translate-y-0.5 hover:bg-black bg-green-500 px-4 py-2 rounded-lg shadow-lg"
            href=`/property/information/${property.id}`
          ) See Property
  else 
    h2 There are no properties to show
  