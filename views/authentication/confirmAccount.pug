extends ../layout/index.pug

block contain 
  .p-10
    h1.text-4xl.my-10.font-extrabold.text-center Real
      span.font-normal State
    .mt-8.mx-auto.max-w-md
      h2.text-2xl.font-extrabold.text-center #{page}
      .gb-white.py-8.px-4.shadow
        div(class="w-full max-w-md bg-white shadow px-4 py-8 rounded-lg")
          p(class=`py-1 px-5 rounded-lg w-full ${error ? 'bg-red-500' : 'bg-green-500'} text-center text-white font-bold uppercase`)= message
          if!error
            a(href='/authentication/login' class='text-center font-bold text-sm text-slate-600 uppercase mt-10 block') click here to LogIn

