extends ../layout/index.pug

block contain
  .p-10
    h1.text-4xl.my-10.font-extrabold.text-center Real
      span.font-normal State
    .mt-8.mx-auto.max-w-md
      h2.text-2xl.font-extrabold.text-center #{page}
      if errors
        .max-w-md.mx-auto.my-10
          each error in errors
            p.bg-red-700.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-blod= error.msg
            
      .gb-white.py-8.px-4.shadow
        form(class="mt-8 space-y-6" action="/authentication/forgot-password" method="POST" )       
          div
            label(class="block text-sm text-gray-500" for="email") Email
            input(class="w-full border border-gray-300 rounded-md px-3 py-2" type="email" name="email" id="email" placeholder="Enter your email" required)
          
          div(class="flex items-center justify-between mt-6")
            a(class="text-xs text-gray-500" href="/authentication/login") Do you have an account? Log in
            a(class="text-xs text-gray-500" href="/authentication/signup") Don't you have an account? Sign up


          div(class="mt-6")
            button(type="submit" class="w-full bg-green-500 hover:bg-green-600 active:bg-green-700 text-white font-bold py-2 px-4 rounded") Forgot Password
