header
  #container-header.container.mx-auto.flex.items-center.justify-between.py-4.px-8.shadow-lg
    a(id="logoRE" href="/")
      h1#title-container.text-green-500.text-4xl.font-extrabold.text-center
        | Real
        span.text-green-500.font-normal.ml-1
          | State

    div#general-search-container
      div#arrow-search
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(34, 197, 94, 1);transform: ;msFilter:;"><path d="M16.293 9.293 12 13.586 7.707 9.293l-1.414 1.414L12 16.414l5.707-5.707z"></path></svg>
      div(id="filterForm" class="filter-form flex items-center mx-4")
        div#filterCategory-container.hide-filter.flex.items-center
          label(for='categoryFilterByMagnifier').mr-2 Category
          select#categoryFilterByMagnifier.w-32
            option(value='').text- Select
            each category in categories
              option(value=category.id)= category.category
        div#search-container.flex.items-center
          input(type="text" id="userSearch" placeholder="Search by categories, name and more" class="w-[300px] border-b-2 border-green-500 w-56 px-3 mx-9")
          button(id="submitButton" type="submit" class="mr-3")
            svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(34, 197, 94, 1);transform: ;msFilter:;")
              path(d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z")

    if user == null
      div#log-container.flex.space-x-6.bg-green-500.px-4.py-2.rounded-lg.shadow-lg.px-4
        a(href="/authentication/logIn", class="text-white font-semibold transition duration-300 ease-in-out transform hover:translate-y-0.5 hover:text-black")
          | <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="transform: ;msFilter:;"><path d="m13 16 5-4-5-4v3H4v2h9z"></path><path d="M20 3h-9c-1.103 0-2 .897-2 2v4h2V5h9v14h-9v-4H9v4c0 1.103.897 2 2 2h9c1.103 0 2-.897 2-2V5c0-1.103-.897-2-2-2z"></path></svg>
        a(href="/authentication/signUp", class="text-white font-semibold transition duration-300 ease-in-out transform hover:translate-y-0.5 hover:text-black")
          | Sign Up
    else 
      nav#log-container.flex.space-x-6.bg-green-500.px-4.py-2.rounded-lg.shadow-lg.px-4
        a(href="/properties", class="text-white font-semibold transition duration-300 ease-in-out transform hover:translate-y-0.5 hover:text-black")
          | My Properties
        a(href="/authentication/log-out", class="text-white font-semibold transition duration-300 ease-in-out transform hover:translate-y-0.5 hover:text-black")
          | <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="transform: ;msFilter:;"><path d="M16 13v-2H7V8l-5 4 5 4v-3z"></path><path d="M20 3h-9c-1.103 0-2 .897-2 2v4h2V5h9v14h-9v-4H9v4c0 1.103.897 2 2 2h9c1.103 0 2-.897 2-2V5c0-1.103-.897-2-2-2z"></path></svg>

